#! /usr/bin/env bash

if [[ $# -eq 1 ]]; then
    echo "Exactly one argument provided: $1"
    selected=$1
else
    selected=$(find ~ ~/work ~/code ~/.nrfconnect-apps/local -maxdepth 1 -type d | fzf)
fi

if [[ -z $selected ]]; then
    # Probably exited fuzzy find without selecting a folder to open.
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

echo "Will open $selected_name"

kitty --title $basename -d $selected --detach
